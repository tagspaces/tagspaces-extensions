{
  "name": "@tagspaces/text-editor",
  "version": "1.0.0",
  "description": "A TagSpaces extension allowing editing of text based documents.",
  "homepage": "https://www.tagspaces.org",
  "main": "main.js",
  "author": {
    "name": "TagSpaces UG",
    "email": "info@tagspaces.org",
    "url": "https://www.tagspaces.org"
  },
  "license": "MIT",
  "dependencies": {
    "codemirror": "5.65.11",
    "shelljs": "^0.8.5"
  },
  "scripts": {
    "postinstall": "node scripts/update-libs.js"
  },
  "tsextension": {
    "name": "Text Editor",
    "types": [
      "viewer",
      "editor"
    ],
    "fileTypes": [
      "c",
      "cpp",
      "cs",
      "css",
      "h",
      "java",
      "js",
      "jsm",
      "less",
      "ml",
      "php",
      "pl",
      "py",
      "rb",
      "sh",
      "sql",
      "txt",
      "xml"
    ],
    "fileTypesEdit": [
      "mdx",
      "svg",
      "xhtml"
    ]
  }
}
